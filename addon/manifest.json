{
  "manifest_version": 2,
  "name": "RunWith",
  "description": "Run external commands on contextual elements",
  "version": "0.1",
  "applications": {
    "gecko": {
      "id": "run@runwith.run",
      "strict_min_version": "56.0a1"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "settings/settings.html",
    "browser_style": true
  },
  "permissions": [
    "menus",
    "nativeMessaging",
    "storage"
  ],
  "icons": {
    "16": "icons/runwith-16.png",
    "32": "icons/runwith-32.png",
    "48": "icons/runwith-48.png"
  }
}
